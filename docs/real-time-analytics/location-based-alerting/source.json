{
  "connector.class": "MySqlCdcSource",
  "name": "user-data-cdc",
  "kafka.api.key": "<my-kakfa-api-key>",
  "kafka.api.secret": "<my-kafka-api-secret>",
  "database.hostname": "<my-database-endpoint>",
  "database.port": "3306",
  "database.user": "<my-database-user>",
  "database.password": "<my-database-password>",
  "database.server.name": "user-data-db",
  "database.ssl.mode": "preferred",
  "output.data.format": "JSON",
  "tasks.max": "1"
}

{
  "connector.class": "ElasticsearchSink",
  "name": "promo-alerts-sink",
  "topics": "promo_alerts",
  "input.data.format": "JSON",
  "kafka.api.key": "<my-kafka-api-key>",
  "kafka.api.secret": "<my-kafka-api-secret>",
  "connection.url": "<my-elastic-endpoint>",
  "connection.username": "<my-elastic-user>",
  "connection.password": "<my-elastic-password>",
  "tasks.max": "1"
}
